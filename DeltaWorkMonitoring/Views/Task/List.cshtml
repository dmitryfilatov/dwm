@model TaskListViewModel
@foreach (var t in Model.Tasks)
{
   @Html.Partial("TaskSummary", t)
}

<div page-model="@Model.PagingInfo" page-action="List"
     page-classes-enabled="true"        
     page-class="btn" page-class-normal="btn-default"
     page-class-selected="btn-primary" page-url-status="@Model.CurrentStatus"
     class="btn-group pull-right">
</div>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Task</a>
</div>