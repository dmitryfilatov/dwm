
@model WorkTask
@{
    ViewBag.Title = "Edit Task";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <div><span asp-validation-for="Comment" class="text-danger"></span></div>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ProjectName"></label>
        <div><span asp-validation-for="ProjectName" class="text-danger"></span></div>
        <select asp-for="ProjectName" class="form-control"
                asp-items="@new SelectList((@ViewBag.Projects as IEnumerable<Project>).Select(p => p.Name))"></select>
    </div>


    <div class="form-group">
        <label asp-for="Status"></label>
        <div><span asp-validation-for="Status" class="text-danger"></span></div>
        <select asp-for="Status" class="form-control"
                asp-items="@new SelectList(Enum.GetNames(typeof(DeltaWorkMonitoring.Models.TaskStatus)).Except(new [] {DeltaWorkMonitoring.Models.TaskStatus.None.ToString()}) )"></select>
    </div>
    <div class="form-group">
        <label asp-for="Priority"></label>
        <div><span asp-validation-for="Priority" class="text-danger"></span></div>
        <select asp-for="Priority" class="form-control"
                asp-items="@new SelectList(Enum.GetNames(typeof(DeltaWorkMonitoring.Models.TaskPriority)).Except(new [] {DeltaWorkMonitoring.Models.TaskPriority.None.ToString()}) )"></select>
    </div>
    <div class="form-group">
        <label asp-for="Estimate"></label>
        <div><span asp-validation-for="Estimate" class="text-danger"></span></div>
        <input asp-for="Estimate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Started"></label>
        <div><span asp-validation-for="Started" class="text-danger"></span></div>
        <input asp-for="Started" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="Finished"></label>
        <div><span asp-validation-for="Finished" class="text-danger"></span></div>
        <input asp-for="Finished" class="form-control"type="datetime-local" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-default">Cancel</a>
    </div>
</form>